{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/CrosswordFeud.csproj",
        "/property:GenerateFullPaths=true"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "args": ["test", "${workspaceFolder}/CrosswordFeud.csproj"],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "dotnet version",
      "command": "dotnet",
      "args": ["--version"],
      "type": "shell",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish release win-x64",
      "command": "dotnet",
      "args": ["publish", "--configuration", "Release", "--runtime", "win-x64"],
      "type": "shell",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish release linux-x64",
      "command": "dotnet",
      "args": [
        "publish",
        "--configuration",
        "Release",
        "--runtime",
        "linux-x64"
      ],
      "type": "shell",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Build CrosswordFeud - Docker Production",
      "command": "docker",
      "args": [
        "build",
        ".",
        "-f",
        "./Dockerfile",
        "-t",
        "perivar/crosswordfeud:latest"
      ],
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}
