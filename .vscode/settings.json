{
  "cSpell.enabled": false,
  "editor.detectIndentation": false,
  "editor.insertSpaces": false,
  "editor.tabSize": 4,
  "editor.formatOnSave": true,
  //   "files.autoSave": "onFocusChange",
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false,
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.formatOnSave": false,
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false,
    "editor.tabSize": 2
  },
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    }
  ],
  //   "sasslint.enable": false,
  //   "sasslint.trace.server": "messages",
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "scss.showErrors": false,
  "backtix.languages": {
    "javascript": true,
    "typescript": true,
    "javascriptreact": true,
    "typescriptreact": true
  },
  "backtix.placeholders": {
    "active": true,
    "text": "Add placeholder."
  },
  "prettier.disableLanguages": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "prettier.eslintIntegration": true,
  "prettier.stylelintIntegration": true
}
