{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint", 
    "react", 
    "react-hooks",
    "jsx-a11y"
  ],
  "parserOptions": {
    "project": "tsconfig.json",
    "tsconfigRootDir": "ClientApp"
  },
  "rules": {
    "no-console": "warn",
    "no-debugger": "warn",
    "react/no-find-dom-node": "warn",
    "react/no-string-refs": "warn",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "@typescript-eslint/indent": "off",
    "@typescript-eslint/interface-name-prefix": "off",          "// disagree with TS team on usefulness": 0,
    "@typescript-eslint/explicit-member-accessibility": "off",  "// ok with implicit public": 0,
    "@typescript-eslint/explicit-function-return-type": "off",  "// also ok": 0,
    "@typescript-eslint/no-explicit-any": "off",                "// I'm only allergic to implicit any": 0
  },
  "settings": {
    "react": {
        "version": "16.8.6"
    }
}
}
