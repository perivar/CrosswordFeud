{
  "extends": [
    "react-app",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "prettier/@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "project": "tsconfig.json",
    "tsconfigRootDir": "ClientApp"
  },
  "rules": {
    "@typescript-eslint/interface-name-prefix": "off",          "// disagree with TS team on usefulness": "",
    "@typescript-eslint/explicit-member-accessibility": "off",  "// ok with implicit public": "",
    "@typescript-eslint/explicit-function-return-type": "off",  "// also ok": "",
    "@typescript-eslint/no-explicit-any": "off",                "// I'm only allergic to implicit any": ""
  }
}
